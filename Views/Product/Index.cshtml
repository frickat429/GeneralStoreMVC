@model List<GeneralStoreMVC.Models.Product.ProductIndexVM>
@{
    ViewData["Title"] = "Product Index";
}

<div class="d-flex flex-wrap justify-content-between align-items-baseline">
    <h1 class="display-4">All Products</h1> 
    <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-success">Create a Product</a>
</div>

@if (TempData["ErrorMsg"] != null) 
{
    <div class="alert alert-danger alert-dismissible fade sjpw" role="alert">
        <strong>Error:</strong> @TempData["ErrorMsg"] 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
} 

<table class="table table-striped border">
    <thead>
        <tr>
            <th>Id</th> 
            <th>Name</th> 
            <th>Quanity</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td> 
                <td>@product.Name</td>
                <td>@product.QuantityInStock</td>
                <td class="text-end"></td> 
                <a asp-action="Details" asp-asp-route-id="@product.Id" class="btn btn-sm-primary">Details</a>
                <a asp-action="Edit" asp-route-id="@product.Id" class="btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
            </tr>
        }
    </tbody>
</table>